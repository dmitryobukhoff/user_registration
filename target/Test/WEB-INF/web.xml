<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">
  <filter>
    <filter-name>Filter</filter-name>
    <filter-class>ru.dmitryobukhoff.filters.CharsetFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>display</servlet-name>
    <servlet-class>ru.dmitryobukhoff.servlets.DisplayServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>display</servlet-name>
    <url-pattern>/display</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>add</servlet-name>
    <servlet-class>ru.dmitryobukhoff.servlets.AddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>add</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
 <servlet>
   <servlet-name>exit</servlet-name>
   <servlet-class>ru.dmitryobukhoff.servlets.ExitServlet</servlet-class>
 </servlet>
  <servlet-mapping>
    <servlet-name>exit</servlet-name>
    <url-pattern>/exit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>info</servlet-name>
    <servlet-class>ru.dmitryobukhoff.servlets.InfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>info</servlet-name>
    <url-pattern>/info</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>update</servlet-name>
      <servlet-class>ru.dmitryobukhoff.servlets.UpdateServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
      <servlet-name>update</servlet-name>
      <url-pattern>/update</url-pattern>
  </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>ru.dmitryobukhoff.servlets.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
</web-app>
